 "font_size": 14,
 "html": "<div class=\"letter-head\">{{ letter_head }}</div>\n\n<div>\n    <div style=\"border-bottom: 1px solid grey;border-top: 1px solid grey;\">\n        <table style=\"width:100%;border-right: 1px solid grey;border-left: 1px solid grey;\">\n            <tr style=\"border-bottom: 1px solid grey;\">\n                <td style=\"border-right: 1px solid grey;\"  width=\"65%\">To</td>\n                <td  width=\"35%\"  style=\"text-align: center;\"><b>TAX INVOICE</b></td>\n            </tr>\n            <tr>\n                <td style=\"border-right: 1px solid grey;\">\n                    <b>{{ doc.customer_name}}</b><br>\n                    {% if doc.customer_address %}\n                        {% set address = frappe.get_doc(\"Address\", {\"name\": doc.customer_address}) %}\n                        <p style=\"font-size: 10px\">\n                            {{address.address_line1}}<br>\n                            {{address.address_line2 or \"\"}}<br>\n                            {{address.city or \"\"}} - {{address.pincode or \"\"}}.<br><br>\n                            {{address.gstin}}\n                            GSTIN: <b>{{address.gstin or \"\"}}</b>\n                        </p>\n                    {% else %}\n                        <p style=\"font-size: 10px\">\n                            <br>\n                            <br>\n                            <br>\n                            <br>\n                            <br>\n                        </p>\n                    {% endif %}\n                </td>\n                <td>\n                    <br>\n                    <b>&nbsp;&nbsp;No. &nbsp;&nbsp;&nbsp;:</b> &nbsp;{{doc.name}}<br>\n                    <b>&nbsp;&nbsp;Date &nbsp;:</b> &nbsp;{{doc.get_formatted(\"posting_date\")}}\n                </td>\n            </tr>\n        </table>\n    </div>\n    <div>\n        <table style=\"width:100%;border-right: 1px solid grey;border-left: 1px solid grey;\">\n            <tr style=\"border-bottom: 1px solid grey;\">\n                <td width=\"3%\"  style=\"text-align: center;border-right: 1px solid grey;\"><b>S.No.</b></td>\n                <td width=\"48%\"  style=\"text-align: center;border-right: 1px solid grey;\"><b>PARTICULARS</b></td>\n                <td width=\"17%\"  style=\"text-align: center;border-right: 1px solid grey;\"><b>HSN</b></td>\n                <td width=\"15%\"  style=\"text-align: center;border-right: 1px solid grey;\"><b>QUANTITY</b></td>\n                <td width=\"17%\"  style=\"text-align: center;\"><b>AMOUNT</b></td>\n            </tr>\n            \n            {% for item in doc.items %}\n                <tr>\n                    <td style=\"text-align: left;border-right: 1px solid grey;\">{{item.idx}}.</td>\n                    <td style=\"text-align: left;border-right: 1px solid grey;\">{{item.item_name}}</td>\n                    <td style=\"text-align: center;border-right: 1px solid grey;\">{{item.gst_hsn_code}}</td>\n                    <td style=\"text-align: center;border-right: 1px solid grey;\">{{item.qty}} {{item.uom}}</td>\n                    <td style=\"text-align: right;\">{{\"%.2f\"|format(item.amount)}}</td>\n                </tr>\n            {% endfor %}\n            \n            {% set keys, values = tax_details(doc) %}\n            \n            {% set row_count = doc.items | length + keys | length %}\n            \n            {% for i in range(0, keys | length, 1) %}\n                {% if i == 0 %}\n                    <tr style=\"border-top: 1px solid grey;\">\n                        <td style=\"text-align: left;border-right: 1px solid grey;\"> </td>\n                        <td style=\"text-align: left;border-right: 1px solid grey;\"> </td>\n                        <td colspan=\"2\" style=\"text-align: right;border-right: 1px solid grey;\"><b>{{keys[i]}}</b></td>\n                        <td style=\"text-align: right;\">{{values[i]}}</td>\n                    </tr>\n                {% else %}\n                    <tr>\n                        <td style=\"text-align: left;border-right: 1px solid grey;\"> </td>\n                        <td style=\"text-align: left;border-right: 1px solid grey;\"> </td>\n                        <td colspan=\"2\" style=\"text-align: right;border-right: 1px solid grey;\"><b>{{keys[i]}}</b></td>\n                        <td style=\"text-align: right;\">{{values[i]}}</td>\n                    </tr>\n                {% endif %}\n            {% endfor %}\n            \n            {% if row_count < 27 %}\n                {% for i in range(0, 27 - row_count, 1) %}\n                {% if i == 0 %}\n                    <tr style=\"border-top: 1px solid grey;\">\n                        <td style=\"text-align: left;border-right: 1px solid grey;\">&nbsp;</td>\n                        <td style=\"text-align: left;border-right: 1px solid grey;\">&nbsp;</td>\n                        <td style=\"text-align: left;\">&nbsp;</td>\n                        <td style=\"text-align: left;border-right: 1px solid grey;\">&nbsp;</td>\n                        <td style=\"text-align: left;\">&nbsp;</td>\n                    </tr>\n                {% else %}\n                    <tr>\n                        <td style=\"text-align: left;border-right: 1px solid grey;\">&nbsp;</td>\n                        <td style=\"text-align: left;border-right: 1px solid grey;\">&nbsp;</td>\n                        <td style=\"text-align: left;\">&nbsp;</td>\n                        <td style=\"text-align: left;border-right: 1px solid grey;\">&nbsp;</td>\n                        <td style=\"text-align: left;\">&nbsp;</td>\n                    </tr>\n                {% endif %}\n                {% endfor %}\n            {% endif %}\n            \n            <tr style=\"border-top: 1px solid grey;\">\n                <td rowspan= \"2\" colspan=\"2\"style=\"text-align: left;border-right: 1px solid grey;font-size:14px\">\n                    {% if frappe.db.exists(\"Bank Account\", {\"company\": doc.company}) %}\n                        {% set bank_doc = frappe.get_doc(\"Bank Account\", {\"company\": doc.company}) %}\n                        <b><u>BANK DETAILS :</u></b><br>\n                        <table>\n                            <tr>\n                                <td><b>BANK</b></td>\n                                <td>: {{bank_doc.bank}}</td>\n                            </tr>\n                            <tr>\n                                <td><b>A/C No.</b></td>\n                                <td>:  {{bank_doc.bank_account_no}}</td>\n                            </tr>\n                            <tr>\n                                <td><b>IFSC CODE</b></td>\n                                <td>: {{bank_doc.branch_code}}</td>\n                            </tr>\n                        </table>\n                    {% endif %}\n                    \n                </td>\n                <td colspan=\"2\" style=\"text-align: left;border-right: 1px solid grey;font-size:14px\">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Rounding off (+/-)</b></td>\n                <td colspan=\"1\" style=\"text-align: right;border-right: 1px solid grey;font-size:14px\"> {{\"%.2f\"|format(doc.rounding_adjustment)}}</td>\n            </tr>\n            \n            <tr style=\"border-bottom: 1px solid grey;\">\n            \n                <td colspan=\"2\" style=\"text-align: left;border-right: 1px solid grey;font-size:14px\">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>GRAND TOTAL</b></td>\n                <td colspan=\"1\" style=\"text-align: right;border-right: 1px solid grey;font-size:14px\"> {{\"%.2f\"|format(doc.rounded_total)}}</td>\n            </tr>\n            \n             <tr style=\"border-top: 1px solid grey;border-bottom: 1px solid grey;\">\n                <td colspan=\"5\"style=\"text-align: left;border-right: 1px solid grey;font-size:14px\">\n                    <b>Amount in Words :</b> &nbsp;&nbsp;{{doc.in_words}}\n                </td>\n            </tr>\n            \n             <tr style=\"border-bottom: 1px solid grey;\">\n                {% if doc.terms %}\n                    <td colspan=\"2\" style=\"text-align: left;border-right: 1px solid grey;font-size:14px\">{{doc.terms}}</td>\n                {% else %}\n                    <td colspan=\"2\" style=\"text-align: left;border-right: 1px solid grey;font-size:14px\"> </td>\n                {% endif %}\n                <td colspan=\"3\" style=\"text-align: center;border-right: 1px solid grey;font-size:14px\"> <br>For {{doc.company}} <br><br><br><br> Authorised Signature</td>\n            </tr>\n        \n        </table>\n    </div>\n</div>",
